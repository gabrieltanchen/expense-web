<div class="container-lg">
  <h1>Employer - {{this.employer.name}}</h1>
  <Menus::EmployerItem @employerId={{this.employer.id}} />
</div>
<div class="container-sm">
  <LinkTo @route="employers.edit" @model={{this.employer.id}} class="button">
    Edit
  </LinkTo>
  <button type="button" class="button alert" {{on "click" this.openDeleteModal}}>
    Delete
  </button>
</div>
{{#if this.showDeleteModal}}
  <div class="overlay">
    <div class="container-sm modal">
      {{#if this.deleteErrors}}
        <div class="callout alert">
          {{#each this.deleteErrors as |error|}}
            <p>{{error}}</p>
          {{/each}}
        </div>
      {{/if}}
      <p>Are you sure you want to delete employer <span>{{this.employer.name}}</span>?</p>
      <button type="button" class="button alert" {{on "click" this.deleteEmployer}}>
        Delete
      </button>
      <button type="button" class="button cancel" {{on "click" this.closeDeleteModal}}>
        Cancel
      </button>
    </div>
  </div>
{{/if}}
