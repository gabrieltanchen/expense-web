{{title subcategory.name}}
<div class="grid-container">
  <div class="grid-x">
    <div class="cell">
      <h1>{{category.name}} - {{subcategory.name}}</h1>
    </div>
  </div>
  <div class="grid-x">
    <div class="cell">
      <ul class="menu">
        <li>
          {{#link-to "subcategories.show" subcategory.id}}
            {{fa-icon "list"}} Detail
          {{/link-to}}
        </li>
        <li>
          {{#link-to "subcategories.expenses" subcategory.id}}
            {{fa-icon "credit-card"}} Expenses
          {{/link-to}}
        </li>
        <li class="is-active">
          {{#link-to "subcategories.budgets" subcategory.id}}
            {{fa-icon "money-check-alt"}} Budgets
          {{/link-to}}
        </li>
        <li>
          {{#link-to "subcategories.annual-report" subcategory.id}}
            {{fa-icon "chart-bar"}} Annual Report
          {{/link-to}}
        </li>
      </ul>
    </div>
  </div>
  <div class="grid-x">
    <div class="cell">
      <button id="show-create-budget-form-button" class="button" {{action "showCreateForm"}}>
        Create
      </button>
    </div>
  </div>
  <div class="grid-x">
    <div class="cell">
      {{#if budgets.length}}
        {{pagination-table rows=budgets columns=tableColumns limit=limit page=page meta=meta}}
      {{else}}
        No budgets exist here
      {{/if}}
    </div>
  </div>
</div>
{{#if newBudget}}
  <div class="overlay">
    <div class="grid-x grid-padding-x align-center modal">
      <div class="cell small-12 medium-10 large-8 modal-cell">
        {{forms/budget/create-budget budget=(changeset newBudget BudgetValidations) budgetCreated=(action "closeCreateForm")}}
      </div>
    </div>
  </div>
{{/if}}
