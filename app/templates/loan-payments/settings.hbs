<div class="container-lg">
  <h1>View Loan Payment</h1>
  <Menus::LoanPaymentItem @loanPaymentId={{this.loanPayment.id}} />
</div>
<div class="container-sm">
  <LinkTo @route="loan-payments.edit" @model={{this.loanPayment.id}} class="button">
    Edit
  </LinkTo>
  <button type="button" class="button alert" {{on "click" this.openDeleteModal}}>
    Delete
  </button>
</div>
{{#if this.showDeleteModal}}
  <div class="overlay">
    <div class="container-sm modal">
      {{#if this.deleteErrors}}
        <div class="callout alert">
          {{#each this.deleteErrors as |error|}}
            <p>{{error}}</p>
          {{/each}}
        </div>
      {{/if}}
      <p>Are you sure you want to delete this loan payment?</p>
      <button type="button" class="button alert" {{on "click" this.deleteLoanPayment}}>
        Delete
      </button>
      <button type="button" class="button cancel" {{on "click" this.closeDeleteModal}}>
        Cancel
      </button>
    </div>
  </div>
{{/if}}
