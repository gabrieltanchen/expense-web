<div class="container-lg">
  <h1>Household Member - {{this.householdMember.name}}</h1>
  <Menus::HouseholdMemberItem @memberId={{this.householdMember.id}} />
</div>
<div class="container-sm">
  <LinkTo @route="household-members.edit" @model={{this.householdMember.id}} class="button">
    Edit
  </LinkTo>
  <button class="button alert" {{on "click" this.openDeleteModal}}>
    Delete
  </button>
</div>
{{#if showDeleteModal}}
  <div class="overlay">
    <div class="container-sm modal">
      {{#if this.deleteErrors}}
        <div class="callout alert">
          {{#each this.deleteErrors as |error|}}
            <p>{{error}}</p>
          {{/each}}
        </div>
      {{/if}}
      <p>Are you sure you want to delete household member <span>{{this.householdMember.name}}</span>?</p>
      <button class="button alert" {{on "click" this.deleteHouseholdMember}}>
        Delete
      </button>
      <button class="button cancel" {{on "click" this.closeDeleteModal}}>
        Cancel
      </button>
    </div>
  </div>
{{/if}}
