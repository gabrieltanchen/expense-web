<label>{{label}}
  {{pikaday-input format="YYYY-MM-DD" id=propertyId value=(mut (get changeset propertyName)) onSelection=(action "dateSelected") useUTC=true}}
  {{#if (get changeset.error propertyName)}}
    {{#each (get (get changeset.error propertyName) 'validation') as |error|}}
      <p class="validated-input-error">
        {{error}}
      </p>
    {{/each}}
  {{/if}}
</label>
