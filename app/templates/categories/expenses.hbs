{{title category.name}}
<div class="grid-container">
  <div class="grid-x">
    <div class="cell">
      <h1>{{category.name}}</h1>
    </div>
  </div>
  <div class="grid-x">
    <div class="cell">
      <ul class="menu">
        <li>
          {{#link-to "categories.show" category.id}}
            {{fa-icon "list"}} Details
          {{/link-to}}
        </li>
        <li>
          {{#link-to "categories.subcategories" category.id}}
            {{fa-icon "project-diagram"}} Subcategories
          {{/link-to}}
        </li>
        <li class="is-active">
          {{#link-to "categories.expenses" category.id}}
            {{fa-icon "credit-card"}} Expenses
          {{/link-to}}
        </li>
      </ul>
    </div>
  </div>
  <div class="grid-x">
    <div class="cell">
      <a class="button" {{action "showCreateForm"}}>
        Create
      </a>
    </div>
  </div>
  {{#if newExpense}}
    <div class="overlay">
      <div class="grid-x grid-padding-x align-center modal">
        <div class="cell small-12 medium-10 large-8 modal-cell">
          {{forms/expense/create-expense expense=(changeset newExpense ExpenseValidations) expenseCreated=(action "closeCreateForm") vendorSearch=vendor}}
        </div>
      </div>
    </div>
  {{/if}}
</div>
