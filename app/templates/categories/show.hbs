{{title category.name}}
<div class="grid-container">
  <div class="grid-x">
    <div class="cell small-8">
      <h1>{{category.name}}</h1>
    </div>
    <div class="cell small-4">
      <div class="button-group float-right">
        {{#link-to "categories.edit" category.id class="primary button"}}
          Edit
        {{/link-to}}
        <button id="delete-category-button" class="alert button" {{action "openDeleteModal"}}>
          Delete
        </button>
      </div>
    </div>
  </div>
  {{#if errors}}
    <div class="grid-x">
      <div class="cell">
        <div class="callout alert">
          {{#each errors as |error|}}
            <p>{{error}}</p>
          {{/each}}
        </div>
      </div>
    </div>
  {{/if}}
  <div class="grid-x">
    <div class="cell">
      <ul class="menu">
        <li class="is-active">
          {{#link-to "categories.show" category.id}}
            {{fa-icon "list"}} Details
          {{/link-to}}
        </li>
        <li>
          {{#link-to "categories.subcategories" category.id}}
            {{fa-icon "project-diagram"}} Subcategories
          {{/link-to}}
        </li>
      </ul>
    </div>
  </div>
  <div class="grid-x">
    <div class="cell">
      <table class="unstriped">
        <thead>
          <tr>
            <th>Property</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>UUID</td>
            <td>{{category.id}}</td>
          </tr>
          <tr>
            <td>Name</td>
            <td>{{category.name}}</td>
          </tr>
          <tr>
            <td>Created At</td>
            <td>{{category.created_at}}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
{{#if showDeleteModal}}
  <div class="overlay">
    <div class="grid-x grid-padding-x align-center modal">
      <div class="cell small-12 medium-10 large-8 modal-cell">
        <p>Are you sure you want to delete <em>{{category.name}}</em>?</p>
        <div class="button-group">
          <button class="alert button" {{action "deleteCategory"}}>
            Delete
          </button>
          <button class="secondary button" {{action "closeDeleteModal"}}>
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>
{{/if}}
