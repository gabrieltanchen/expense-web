{{title category.name}}
<div class="grid-container">
  <div class="grid-x">
    <div class="cell small-8">
      <h1>Edit {{category.name}}</h1>
    </div>
    <div class="cell small-4">
      <div class="button-group float-right">
        {{#link-to "categories.show" category.id class="secondary button"}}
          Back
        {{/link-to}}
      </div>
    </div>
  </div>
  <div class="grid-x">
    <div class="cell">
      {{forms/category/edit-category category=(changeset category CategoryValidations) categorySaved=(action "categorySaved")}}
    </div>
  </div>
</div>
