{{#if this.errors}}
  <div class="callout alert">
    {{#each this.errors as |error|}}
      <p>{{error}}</p>
    {{/each}}
  </div>
{{/if}}
<form {{on "submit" this.save}}>
  <label for="employer-name-input">Name</label>
  <Input @value={{@employer.name}} @type="text" id="employer-name-input" aria-required="true" />

  <Input @value="Save" @type="submit" id="employer-submit" />
</form>
